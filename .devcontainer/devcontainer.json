{
	"name": "docker python and rust",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"postCreateCommand": "sh .devcontainer/postinstall.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter",
				"rust-lang.rust-analyzer"  // Adds Rust language support
			]
		}
	}
}
